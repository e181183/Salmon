<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#EC7122"
            android:fontFamily="@font/mangatb"
            android:text="menu"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#EC7122"
            android:fontFamily="@font/mangatb"
            android:text="reset buttons"
            android:textColor="#000000"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck,TextSizeCheck,TextSizeCheck" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="97dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/red_button"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Salmon sound Button Red"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sound_red_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_image"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="change image red"/>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_mic"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="change sound red"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/green_button"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Salmon sound Button green"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sound_green_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_image"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="change image green"/>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_mic"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="change sound green"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/blue_button"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Salmon sound Button blue"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sound_blue_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_image"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="change image blue"/>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_mic"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="change sound blue"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/yellow_button"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Salmon sound Button yellow"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sound_yellow_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_image"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="change image yellow"/>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_mic"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="change sound yellow"/>

            </LinearLayout>
        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>