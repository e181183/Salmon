<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#EC7122"
            android:fontFamily="@font/mangatb"
            android:text="@string/menu"
            android:textColor="#000000"
            android:textSize="20sp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#EC7122"
            android:fontFamily="@font/mangatb"
            android:text="@string/resetButtons"
            android:textColor="#000000"
            android:textSize="15sp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="97dp"
        android:columnCount="2"
        android:rowCount="2"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/red_button"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/SalmonSoundButtonRed"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sound_red_button"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_image"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="@string/ChangeImageRed"
                    />
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_mic"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="@string/ChangeSoundRed"
                    />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/green_button"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/SalmonSoundButtonGreen"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sound_green_button"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_image"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="@string/ChangeImageGreen"/>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_mic"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="@string/ChangeSoundGreen"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/blue_button"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/SalmonSoundButtonBlue"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sound_blue_button"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_image"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="@string/ChangeImageBlue"
                    />
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_mic"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="@string/ChangeSoundBlue"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/yellow_button"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/SalmonSoundButtonYellow"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sound_yellow_button"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_image"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="@string/ChangeImageYellow"/>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:src="@drawable/ic_mic"
                    android:backgroundTint="#EC7122"
                    android:contentDescription="@string/ChangeSoundYellow"/>

            </LinearLayout>
        </LinearLayout>
    </GridLayout>

    </LinearLayout>

</LinearLayout>