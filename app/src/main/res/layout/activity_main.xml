<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:textAlignment="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:contentDescription="@string/logo"
        android:padding="20dp"
        android:src="@drawable/logo_salmon" />

    <Button
        android:id="@+id/play_game_button"
        android:layout_width="255dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:backgroundTint="@color/salmon_orange"
        android:fontFamily="@font/mangatb"
        android:text="@string/play_game"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/load_game_button"
        android:layout_width="255dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="#4E4E4E"
        android:fontFamily="@font/mangatb"
        android:text="@string/load_game"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/custom_button"
        android:layout_width="255dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:backgroundTint="@color/salmon_orange"
        android:fontFamily="@font/mangatb"
        android:text="@string/customize"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:textAlignment="center"
        android:layout_weight="1">

        <Switch
            android:id="@+id/mute_button"
            android:layout_width="114dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/mangatb"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:text="mute"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/highScoreMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/mangatb"
            android:text="@string/highscore"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.524" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>